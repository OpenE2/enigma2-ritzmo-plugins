<?xml version="1.0" ?>
<!-- Beispieldatei -->
<mountmanager>
 <!-- Bei den in diesem Block stehenden Netzwerkverbindungen wird das NFS-Protokoll genutzt -->
 <nfs>
  <!-- <mount> leitet eine Verbindung ein -->
  <mount>
   <!-- active 0/1 gibt an ob eine Verbindung hergestellt werden soll -->
   <active>0</active>
   <!-- Entfernte IP -->
   <ip>192.168.1.20</ip>
   <!-- Ordner auf dem Server -->
   <share>/exports/mp3</share>
   <!-- Ordner auf der Dream -->
   <dir>/media/mp3</dir>
   <!-- Optionen die beim mounten anzugeben sind -->
   <options>rw,nolock</options>
   <!-- Die Verbindungskonfiguration endet hier -->
  </mount>
  <!-- Eine weitere NFS-Netzwerkverbindung -->
  <mount>
   <active>0</active>
   <ip>192.168.1.21</ip>
   <share>/home/user</share>
   <dir>/media/home</dir>
   <options>rw,nolock</options>
  </mount>
 </nfs>
 <!-- Es folgt eine Verbindung ueber CIFS -->
 <cifs>
  <mount>
   <active>0</active>
   <ip>192.168.1.25</ip>
   <share>/C</share>
   <dir>/media/windows</dir>
   <!-- Der Login-Name, bei leerem Username wird "guest" verwendet -->
   <username>mustermann</username>
   <!-- Das Login-Passwort (kann leer sein) -->
   <password>geheim</password>
  </mount>
 </cifs>
</mountmanager>
